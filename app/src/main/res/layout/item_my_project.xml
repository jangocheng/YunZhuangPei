<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="项目名称："
            android:textSize="16sp"
            android:textColor="@color/color_333333"/>

        <TextView
            android:id="@+id/project_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上海宝龙广场项目"
            android:textSize="16sp"
            android:textColor="@color/color_333333"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="14dp"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="项目地址："
            android:textSize="16sp"
            android:textColor="@color/color_666666"/>

        <TextView
            android:id="@+id/project_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="湖南省-长沙市"
            android:textSize="16sp"
            android:textColor="@color/color_666666"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_dedede" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="14dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true">
            <LinearLayout
                android:id="@+id/is_checked"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/btn_style_white_box_corners">
                <ImageView
                    android:id="@+id/right_image"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/right"
                    android:visibility="gone"/>
            </LinearLayout>

            <TextView
                android:id="@+id/is_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设为默认"
                android:textSize="12sp"
                android:textColor="@color/color_666666"
                android:layout_toRightOf="@+id/is_checked"
                android:layout_marginLeft="4dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/edit"
            android:layout_width="46dp"
            android:layout_height="22dp"
            android:text="编辑"
            android:textSize="12sp"
            android:textColor="@color/color_666666"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/btn_style_white_box_corners"
            android:layout_toLeftOf="@+id/delete"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"/>

        <Button
            android:id="@+id/delete"
            android:layout_width="46dp"
            android:layout_height="22dp"
            android:text="删除"
            android:textSize="12sp"
            android:textColor="@color/color_666666"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/btn_style_white_box_corners"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_f2f2f2" />
</LinearLayout>