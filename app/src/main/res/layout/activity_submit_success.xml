<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_ffffff"
    tools:context=".advisory.activities.SubmitSuccessActivity">

    <LinearLayout
        android:id="@+id/content_one"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_back_btn" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="提交成功"
            android:textColor="@color/color_13386d"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:id="@+id/content_two"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_dedede"
        android:layout_below="@+id/content_one"/>

    <LinearLayout
        android:id="@+id/content_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_below="@+id/content_two">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/success"
            android:layout_marginTop="110dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交成功"
            android:textSize="18sp"
            android:textColor="@color/color_333333"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可以在个人中心查看提交详情"
            android:textSize="12sp"
            android:textColor="@color/color_999999"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/submit"
        android:layout_width="160dp"
        android:layout_height="36dp"
        android:text="完 成"
        android:textSize="16sp"
        android:textColor="@color/color_666666"
        android:background="@drawable/btn_style_white_box_corners"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        style="?android:attr/borderlessButtonStyle"
        android:layout_below="@+id/content_three"/>

</RelativeLayout>
